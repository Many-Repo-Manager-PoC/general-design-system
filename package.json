{
  "name": "general-design-system-root",
  "private": true,
  "scripts": {
    "dev": "pnpm -C ./docs dev",
    "build": "pnpm -C ./design-system build && pnpm -C ./docs build",
    "preview": "pnpm -C ./design-system build && pnpm -C ./docs preview",
    "qwik": "qwik",
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "lint": "biome check --write --unsafe ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.27.11",
    "@linear/sdk": "27.0.0",
    "tsx": "^4.19.4"
  }
}
